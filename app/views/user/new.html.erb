<header>
  <h1>Add a new user</h1>
</header>

<div class="content">
  <article class="bubble">
    <%= form_tag(create_user_without_usermodel_path) do %>
           
      <p>
        <%= label_tag(:name, "Name: ") %>
        <%= text_field_tag(:name ) %>
      </p>

      <p>
        <%= label_tag(:email, "Email: ") %>
        <%= text_field_tag(:email ) %>
      </p>

      <p>
        <%= label_tag(:title, "Title: ") %>
        <%= text_field_tag(:title ) %>
      </p>

      <p>
        <%= label_tag(:hourly_rate, "Hourly Rate: (Dollars) ") %>
        <%= text_field_tag(:hourly_rate ) %>
      </p>

      <p>
        <%= submit_tag("Submit") %>
      </p>

    <% end %>
  </article>
</div>