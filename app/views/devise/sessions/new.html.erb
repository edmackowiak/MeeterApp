<% body_classes << "full-page" %>

<header>
    <h1>Sign in</h1>
</header>

<div class="content">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email %>
    
      <div><%= f.label :password %>
      <%= f.password_field :password %>
    
      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %> <%= f.label :remember_me, :class => 'checkbox-label' %>
      <% end -%>
    
      <%= f.submit "Sign in" %>
    <% end %>
    
    <%= render :partial => "devise/shared/links" %>
</div>